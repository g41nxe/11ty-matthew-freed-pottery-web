---
layout: base
---


{% include "hero.njk" %}

{% include "notification.njk" %}

<div class="md:px-24 mx-auto my-8">

    <section class="md:my-16 my-8">
        <h2 class="text-center font-bold text-2xl text-brand my-8 md:mt-0 "> 
            {{ headline }}
        </h2>
        <h3 class="text-center text-xl text-brand my-8 md:mt-0">
            {{ sub_headline }}
        </h3>
    </section>

    {% for section in faq.sections %}
        <section>
            <h2 class="text-center md:text-left font-bold text-xl text-highlight my-8 md:mx-4"> 
                {{ section.title }}
            </h2>

            {% set items = section.questions %}
            {% include "card-faq.njk" %}
        </section>
    {% endfor %}

</div>