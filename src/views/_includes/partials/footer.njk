<footer class="bg-gray-light text-gray-dark">
    <div class="container mx-auto py-8 md:py-24 px-12">
        <div class="grid md:grid-cols-8 md:text-left text-center font-light gap-x-24">
            <div class="col-span-3 md:grid-cols grid-cols-3">
                <h4 class="font-bold mb-4">{{ global.contact.name | safe }}</h4>
                
                <p class="mb-4">{{global.contact.address | nl2br | safe }}</p>
                
                <p class="mb-4">
                    {{ global.contact.text | safe
                        | replace("<mail>", "<a class=\"hover:text-brand font-semibold\" href=\"mailto:" + global.contact.email + "\">") 
                        | replace("<phone>", "<a class=\"hover:text-brand font-semibold\" href=\"tel:" + global.contact.phone + "\">") 
                        | replace("</mail>", "</a>") 
                        | replace("</phone>", "</a>" ) 
                    }}
                </p>
            </div>

            <div class="col-span-3 md:col-span-2 md:grid-cols grid-cols-3 mt-8 md:mt-0">
                <h4 class="font-bold mb-4">{{ global.socialmedia.title }} </h4>

                <ul class="flex flex-row md:justify-start justify-center">
                    {%- for name, entry in global.socialmedia.services %}        
                    <li class="{{ '' if loop.last else 'mr-4' }}">
                        <a target="_blank" class="hover:text-brand" href="{{ entry.url | url }}">
                            <i class="fab {{ entry.icon }}"></i>
                        </a>
                    </li>
                {%- endfor -%}
                </ul>
            </div>

            <div class="col-span-3 md:grid-cols grid-cols-3 mt-8 md:mt-0">
                <h4 class="font-bold mb-4">{{ global.newsletter.title }}</h4>

                <form class="flex justify-center md:justify-start" data-netlify="true" name="newsletter" method="POST" netlify-honeypot="bot-field">
                    <p class="hidden">
                        <label>Donâ€™t fill this out if you're human: <input name="bot-field" /></label>
                    </p>
                    
                    <input required type="text" id="email" name="email" class="w-3/5 md:w-full px-3 py-1 font-light text-sm focus:bg-gray-lighter bg-gray-DEFAULT border border-gray-dark" placeholder="your@email.com">
                    
                    <button type="submit" class="align-middle px-3 py-1 rounded-r-md border border-l-0 bg-white hover:bg-gray-light border border-gray-dark">
                        <i class="fas fa-envelope-open-text"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</footer>