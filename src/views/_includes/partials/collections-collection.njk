
<h2 class="my-8 md:my-16 font-bold text-xl md:text-2xl text-center">{{ intro.title }}</h2>

{%- for t in intro.texts -%}
    <p class="md:w-3/5 w-5/6 my-4 text-sm md:text-base text-center mx-auto">{{ t }}</p>
{%- endfor -%}

{%- for entry in showcase.gallery -%}
    <div class="grid grid-cols-12 place-content-center w-100 md:my-24">

        <div class="relative col-span-12 md:col-span-6 lg:col-span-7 md:shadow-md {% if loop.index % 2 == 0 %} order-last {% endif %}">

            <div class="relative h-full w-full">
                {% img entry.image.url, entry.image.alt, "(min-width: 1024px) 58.33vw, (min-width: 768px) 50vw, 100vw", "h-full w-full object-cover", "lazy" if loop.index > 2 else "auto" %}
            </div>

        </div>

        <div class="col-span-12 md:col-span-6 lg:col-span-5 bg-white border-b border-t border-gray-light flex flex-col justify-center md:px-16 px-4 md:my-12 md:py-16 py-4">

            <div class=" flex justify-center flex-col items-{{ entry.style }} text-{{ entry.style }}">

                <h3 class="text-brand text-xl lg:text-2xl font-bold">{{ entry.title }}</h3>
                <span class="block text-highlight text-xl lg:text-2xl mb-4">...</span>
                <p class="text-brand text-sm lg:text-base mb-4">{{ entry.text | nl2br | safe }}</p>

                {%- if entry.cta -%}
                    <a target="_blank" href="{{ entry.cta.url | url }}" class="my-4 w-auto py-2 px-8 border text-xs lg:text-sm font-medium rounded-md text-brand hover:text-white border-brand hover:bg-brand">
                        {{ entry.cta.label | upper }}
                    </a>
                {%- endif -%}

            </div>
        </div>
    </div>
{%- endfor -%}

{% include "home-features.njk" %}

<script defer src="/js/collections.js"></script>

