 <h2 class="text-2xl font-bold my-12 ">
    {{ headline }}<br/>
    <span class="text-highlight">{{ subheadline }}</span>
</h2>

<ul class="mb-12 flex flex-row justify-start">
    {%- for name, entry in global.socialmedia.services %}        
    <li>
        <a class="mr-4 text-brand" href="{{ entry.url | url }}">
            <i class="fab {{ entry.icon }}"></i>
        </a>
    </li>
{%- endfor -%}
</ul>

<div class="mb-12 text-brand ">
    {%- for paragraph in intro %}    
        <p>{{ paragraph }}</p>   
    {%- endfor-%} 
</div>


<div class="mb-12 text-brand ">
    <p class="font-bold">{{ message }}</p>
    <a class="hover:text-highlight" href="mailto:{{ global.contact.email }}">{{ global.contact.email }}</a>
</div>

<div class="mb-12 text-brand ">
    <p class="font-bold">{{ phone }}</p>
    <a class="hover:text-highlight" href="tel:{{ global.contact.phone }}">{{ global.contact.phone }}</a>
</div>

<div class="mb-12 text-brand ">
    <p class="font-bold">{{ address }}</p>
    <p>{{ global.contact.address | nl2br | safe }}</p>
</div>

<div id="map" class="mb-12">
    {{ gmaps | safe }}
</div>