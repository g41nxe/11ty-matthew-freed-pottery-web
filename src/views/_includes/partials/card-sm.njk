{% extends "card.njk" %}


{% set open = 'first' %}
{% set count = 8 %}

{% block content %}
    <div class="bg-white p-6 border border-gray-light">
        <h3 class="font-bold text-sm mb-2">{{ item.content.title }}</h3>
        <p class="text-xs">{{ item.content.body | nl2br | safe }}</p>
    </div>
{% endblock %}

{% block title %}
    <div class="grid grid-cols-8 my-2 py-2 px-2 border-b-2 border-brand w-full">
        <p class="col-span-8 md:col-span-2 lg:col-span-1 flex-none leading-8 align-baseline text-sm">
            {{ item.date | date("MM/DD/YY") }}
        </p>
        
        <button @click="open = !open" class="col-span-7 md:col-span-5 lg:col-span-6 font-bold text-left text-md hover:text-highlight">
            {{ item.name }}
        </button>
        
        <button @click="open = !open" aria-label="Show details" class="flex-none hover:text-highlight text-right">
            <i class="fas fa-plus fa-xs"  x-show="open === false"></i>
            <i class="fas fa-minus fa-xs" x-show="open === true"></i>
        </button>
    </div>
{% endblock %}

{% block image %}
<div class="relative order-first md:order-last">
    
    {% img item.image.url, item.image.alt, "(min-width: 768px) 25vw, 100vw", "h-full w-full object-cover" %}

</div>
{% endblock %}