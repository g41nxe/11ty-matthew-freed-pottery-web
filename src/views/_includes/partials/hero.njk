<div class="grid grid-cols-12 place-content-center">
    <div class="hidden md:flex md:col-span-4 col-span-12 mx-auto w-full h-full bg-gradient-to-l from-blue-hero-bg items-center">
        <div class="sm:text-center lg:text-left md:ml-20 p-8 pt-12 md:p-0">
            <h2 class="text-blue-hero-title font-display md:text-4xl text-2xl">
                {{ hero.title }}
                <br/>
                <span class="text-sm font-sans">
                    {{ hero.subtitle }}
                </span>
            </h2>
        </div>
    </div>

    <div class="md:col-span-8 col-span-12">
        <img class="h-100" src="{{ hero.image | url }}" alt="Hero Image" />
    </div>
</div>
