
<h2 class="text-2xl text-brand font-bold my-12 mb-12">
    {{ contactform.title }}
</h2>

<form class="text-brand mb-8" netlify-honeypot="bot-field" data-netlify="true" name="contact" method="POST" data-netlify-recaptcha="true">
    <p class="hidden">
        <label>Donâ€™t fill this out if you're human: <input name="bot-field" /></label>
   </p>

    <input name="name" type="text" placeholder="Name"
            class="w-full text-sm p-2 border border-gray-dark mb-4 bg-gray-lighter focus:border-brand focus:bg-white"
    />
    
    <input name="email" type="text" placeholder="Email *" required
            class="w-full text-sm p-2 border border-gray-dark mb-4 bg-gray-lighter focus:border-brand focus:bg-white"
    />
    
    <input name="phone" type="text" placeholder="Phone"
            class="w-full text-sm p-2 border border-gray-dark mb-4 bg-gray-lighter focus:border-brand focus:bg-white"
    />
    
    <textarea name="message" placeholder="Whats on your mind? *" required
            class="md:h-48 w-full text-sm p-2 border border-gray-dark mb-4 bg-gray-lighter focus:border-brand focus:bg-white"
    ></textarea>
        
   <div data-netlify-recaptcha="true" class="mb-4"></div>

    <button type="submit"
            class="bg-highlight text-brand px-8 py-2 text-sm hover:bg-brand hover:text-highlight"
    >{{ contactform.submit | upper }}</button>
</form>

<p class="text-xs text-gray-dark">{{ contactform.info }}</p>

